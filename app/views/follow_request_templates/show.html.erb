<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Follow request #<%= @follow_request.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/follow_requests" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @follow_request.sender %>
          <a href="/follow_requests/<%= @follow_request.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit follow_request
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @follow_request.sender %>
          <a href="/delete_follow_request/<%= @follow_request.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete follow_request
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <% if @follow_request.sender.present? %>
          <a href="/users/<%= @follow_request.sender_id %>">
            <%= @follow_request.sender.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Recipient
      </dt>
      <dd>
        <% if @follow_request.recipient.present? %>
          <a href="/users/<%= @follow_request.recipient_id %>">
            <%= @follow_request.recipient.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@follow_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@follow_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

