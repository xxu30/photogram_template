<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Follow request #<%= @follow_request.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/follow_requests" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link follow_request start -->
      <div class="col">
        <a href="/follow_requests/<%= @follow_request.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit follow request
        </a>
      </div>
      <!-- Edit link follow_request end -->

      <!-- Delete link follow_request start -->
      <div class="col">
        <a href="/delete_follow_request/<%= @follow_request.id %>" class="btn btn-block btn-outline-secondary">
          Delete follow request
        </a>
      </div>
      <!-- Delete link follow_request end -->
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <!-- Display sender_id start -->
      <dd>
        <%= @follow_request.sender_id %>
      </dd>
      <!-- Display sender_id end -->

      <dt>
        Recipient
      </dt>
      <!-- Display recipient_id start -->
      <dd>
        <%= @follow_request.recipient_id %>
      </dd>
      <!-- Display recipient_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@follow_request.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@follow_request.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

