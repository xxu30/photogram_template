<h1>
  Edit follow request #<%= @follow_request.id %>
</h1>

<hr>

<!-- Form follow_request start -->
<form action="/update_follow_request/<%= @follow_request.id %>" method="post">
<!-- Form follow_request end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <input type="text" id="sender_id" name="sender_id" class="form-control" value="<%= @follow_request.sender_id %>">
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for recipient_id start -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <!-- Input for recipient_id start -->
    <input type="text" id="recipient_id" name="recipient_id" class="form-control" value="<%= @follow_request.recipient_id %>">
    <!-- Input for recipient_id end -->
  </div>
  <!-- Label and input for recipient_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update follow request
  </button>
</form>

<hr>

<a href="/follow_requests">
  Go back
</a>
