<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All follow requests
    </h1>

    <a href="/follow_requests/new" class="btn btn-block btn-outline-secondary">
      Add a new follow request
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "follow_request_templates/follow_requests_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @follow_requests.each do |follow_request| %>
      <tr>
        <td>
          <%= follow_request.id %>
        </td>

        <td>
          <% if follow_request.sender.present? %>
            <a href="/users/<%= follow_request.sender.id %>">
              <%= follow_request.sender.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if follow_request.recipient.present? %>
            <a href="/users/<%= follow_request.recipient.id %>">
              <%= follow_request.recipient.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(follow_request.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(follow_request.updated_at) %> ago
        </td>

        <td>
          <a href="/follow_requests/<%= follow_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @follow_requests, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
