<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Comment #<%= @comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link comment start -->
      <div class="col">
        <a href="/comments/<%= @comment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit comment
        </a>
      </div>
      <!-- Edit link comment end -->

      <!-- Delete link comment start -->
      <div class="col">
        <a href="/delete_comment/<%= @comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete comment
        </a>
      </div>
      <!-- Delete link comment end -->
    </div>

    <dl>
      <dt>
        Body
      </dt>
      <!-- Display body start -->
      <dd>
        <%= @comment.body %>
      </dd>
      <!-- Display body end -->

      <dt>
        Commenter
      </dt>
      <!-- Display commenter_id start -->
      <dd>
        <%= @comment.commenter_id %>
      </dd>
      <!-- Display commenter_id end -->

      <dt>
        Photo
      </dt>
      <!-- Display photo_id start -->
      <dd>
        <%= @comment.photo_id %>
      </dd>
      <!-- Display photo_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@comment.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@comment.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
