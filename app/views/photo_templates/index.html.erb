<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All photos
    </h1>

    <a href="/photos/new" class="btn btn-block btn-outline-secondary">
      Add a new photo
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "photo_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <!-- Display photo.id start -->
        <td>
          <%= photo.id %>
        </td>
        <!-- Display photo.id end -->

        <!-- Display photo.caption start -->
        <td>
          <%= photo.caption %>
        </td>
        <!-- Display photo.caption end -->

        <!-- Display photo.image start -->
        <td>
          <img src='<%= photo.image %>' class='img-fluid'>
        </td>
        <!-- Display photo.image end -->

        <!-- Display photo.owner_id start -->
        <td>
          <%= photo.owner.username %>
        </td>
        <!-- Display photo.owner_id end -->

        <!-- Display photo.location start -->
        <td>
          <%= photo.location %>
        </td>
        <!-- Display photo.location end -->

        <!-- Display photo.created_at start -->
        <td>
          <%= time_ago_in_words(photo.created_at) %> ago
        </td>
        <!-- Display photo.created_at end -->

        <!-- Display photo.updated_at start -->
        <td>
          <%= time_ago_in_words(photo.updated_at) %> ago
        </td>
        <!-- Display photo.updated_at end -->

        <td>
          <a href="/photos/<%= photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
