<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All likes
    </h1>

    <a href="/likes/new" class="btn btn-block btn-outline-secondary">
      Add a new like
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "like_templates/likes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <td>
          <%= like.id %>
        </td>

        <td>
          <% if like.user.present? %>
            <a href="/users/<%= like.user.id %>">
              <%= like.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if like.photo.present? %>
            <a href="/photos/<%= like.photo.id %>">
              <%= like.photo.caption %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(like.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(like.updated_at) %> ago
        </td>

        <td>
          <a href="/likes/<%= like.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @likes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
